@model Projeto_Claro.Models.ticketModel

<!DOCTYPE html>
<html lang="pt-br">
<head>

    <meta charset="UTF-8">
    <link rel="icon" href="~/css/logo-claro-png_optimized.png" type="image/x-icon">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Claro Challenge </title>
</head>
<body>

    <form asp-action="Create" method="post">

    <div class="container">
        <header>
                <nav>
                    <a class="text-white" asp-action="Metricas" asp-controller="Ticket">Metricas</a>
                </nav>
            <h1>Desafio Claro</h1>
            <p>Aplicação abertura de chamados</p>
        </header>
        
        <div class="form-container">
            <form id="grupoForm">
                <h2>Informações do chamado</h2>
                
                <div class="form-group">
                        <label asp-for="NameUser">Nome</label>
                        <input asp-for="NameUser" type="text" class="nome-input" />
                </div>
                    <div class="form-group">
                        <label asp-for="CPF">CPF:</label>
                        <input asp-for="CPF"/>
                    </div>
                <div class="form-group">
                        <label asp-for="Description">Digite os detalhes do problema</label>
                        <textarea asp-for="Description"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class=" btn-enviar">Enviar</button>
                </div>
            </form>
                <form asp-action="Historico" method="get" class="d-flex justify-content-center">
                    <div class="form-group ">
                        <button type="submit" class="btn-primary">Meus Tickets</button>
                    </div>
                </form>
        </div>
    </div>
    </form>

    @if (ViewBag.ModelErrors != null)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var erro in ViewBag.ModelErrors)
                {
                    <li>@erro</li>
                }
            </ul>
        </div>
    }
    @if (ViewBag.ExceptionMessage != null)
    {
        <div class="alert alert-danger">
            <strong>Erro:</strong> @ViewBag.ExceptionMessage
        </div>
    }

    
</body>
</html>
